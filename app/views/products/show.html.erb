<div class="middle">
  <p id="pagetitle">Product Info</p>
  <p id="pagesubtitle">Please review these product details</p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Unit Price:</strong>
    $<%= '%.2f' % @product.unit_price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>

  <p>
    <strong>SKU:</strong>
    <%= @product.sku %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @product.brand %>
  </p>

  <p>
    <strong>Model Number:</strong>
    <%= @product.model_num %>
  </p>

  <p>
  <strong>Categories:</strong><br />
      <% @product.categories.each do |category| %>
          <%= category.name %><br />
      <% end %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back to Products Index', products_path %>
</div>