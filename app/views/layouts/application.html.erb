<!DOCTYPE html>
<html>
	<head>
	  <title>The Internet's Longest Site!</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="header">
			<p>Nile</p>
			<p align="right">
				<% if user_signed_in? %>
					Hi, <%= current_user.email %>
					<br />
					<%= button_to "Sign Out", destroy_user_session_path, method:"delete", style:"float: right" %>
				<% else %>
					Not signed in
					<%= button_to "Sing In", new_user_session_path, method:"get", style:"float: right" %>
				<% end %>
			</p>
		</div>

		<div>
			<%= notice %><br />
			<%= alert %>
		</div>

		<%= yield %>

	</body>
</html>
